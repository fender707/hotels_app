 <%= form_for([@hotel,@review], html: { class: 'horizontal-form'}) do |f| %>
  <% if @hotel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul>
      <% @hotel.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>        



 	    <div class="field">
 	      <%= f.label :rating %><br>
  	      <%= f.number_field :rating, min: 0, max: 5 %>
 	   </div>
 	   <div class="field">
 	     <%= f.label :comment %><br>
 	     <%= f.text_area :comment %>
 	   </div>
 	   <div class="actions">
 	     <%= f.submit %>
 	   </div>
          <% end %>
