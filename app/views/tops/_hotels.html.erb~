
  <%= @hotels.each do |hotel| %>

      <div class='main_p'>
        <%= image_tag(hotel.photo) %>
        <div class="one">
          <h3><%= hotel.name %></h3>
          <p class="desc"><%= sanitize(hotel.description) %></p>
        </div>  
        <div class="price_line">
          <span class="price"><%= number_to_currency(hotel.price) %>  
        </div> 
        <div>
	  <p><%= hotel.breakfast %></p>
        </div>
        <div>
	  <p><%= hotel.address %></p>
        </div>
        <div>
	  <p><%= hotel.reviews.average("rating") %>/5</p>
        </div>
        <div class="review">
          <p><%= link_to "Add comment", new_hotel_review_path( hotel_id: hotel.id),  :class => 'btn btn-default' %></p> 
        </div>
	 <%= hotel.reviews.each do |review| %>
           <div>
             <p><%= review.title %></p>
           </div>
           <div>
             <p><%= review.rating %></p>
           </div>
           <div>
             <p><%= review.comment %></p>
           </div>
        <% end %>
      </div>
      
  <% end %>

